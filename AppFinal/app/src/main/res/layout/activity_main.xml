<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.appfinal.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRAR CLIENTE"
            android:id="@+id/main_btn_Registrar"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickRegistrar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="consultar clientes"
            android:id="@+id/main_btn_clientes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onClickConsultar"
            android:contextClickable="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="salir"
            android:id="@+id/main_btn_salir"
            android:layout_below="@+id/main_btn_clientes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onClickSalir" />
    </LinearLayout>

</RelativeLayout>